{
  "name": "distilt",
  "version": "0.18.0",
  "description": "generate publishable bundles",
  "keywords": [
    "bundle",
    "rollup",
    "swc"
  ],
  "homepage": "https://github.com/sastan/distilt#readme",
  "bugs": "https://github.com/sastan/distilt/issues",
  "repository": "github:sastan/distilt",
  "license": "MIT",
  "author": "Sascha Tandel (https://github.com/sastan)",
  "type": "module",
  "bin": "./distilt.js",
  "files": [
    "env",
    "*.js",
    "typed.d.ts"
  ],
  "exports": {
    "./env": {
      "types": "./env/index.d.ts",
      "production": {
        "module": "./env/production.js",
        "require": "./env/production.cjs",
        "default": "./env/production.js"
      },
      "module": "./env/index.js",
      "node": "./env/node.cjs",
      "default": "./env/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "format": "prettier --write --ignore-path .gitignore . '!pnpm-lock.yaml'",
    "release": "npx np --yolo"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "peerDependencies": {
    "@swc/helpers": "^0.4.11"
  },
  "peerDependenciesMeta": {
    "@swc/helpers": {
      "optional": true
    }
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^23.0.1",
    "@rollup/plugin-dynamic-import-vars": "^2.0.0",
    "@rollup/plugin-inject": "^5.0.1",
    "@rollup/plugin-json": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^5.0.0",
    "@rollup/pluginutils": "^5.0.1",
    "@swc/core": "^1.3.9",
    "@swc/helpers": "^0.4.12",
    "es-module-lexer": "^1.0.5",
    "execa": "^6.1.0",
    "find-up": "^6.3.0",
    "globby": "^13.1.2",
    "normalize-package-data": "^5.0.0",
    "rollup": "^3.2.3",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-tsconfig-paths": "^1.3.0",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "size-limit": "^8.1.0",
    "typescript": "^4.8.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com/"
  },
  "engines": {
    "node": ">=14"
  }
}
