{
  "name": "distilt",
  "version": "0.17.1",
  "description": "generate publishable bundles",
  "keywords": [
    "bundle",
    "rollup",
    "swc"
  ],
  "homepage": "https://github.com/sastan/distilt#readme",
  "bugs": "https://github.com/sastan/distilt/issues",
  "repository": "github:sastan/distilt",
  "license": "MIT",
  "author": "Sascha Tandel (https://github.com/sastan)",
  "type": "module",
  "bin": "./distilt.js",
  "files": [
    "*.js"
  ],
  "scripts": {
    "format": "prettier --write --ignore-path .gitignore . '!pnpm-lock.yaml'",
    "release": "npx np --yolo"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "peerDependencies": {
    "@swc/helpers": "^0.4.11"
  },
  "peerDependenciesMeta": {
    "@swc/helpers": {
      "optional": true
    }
  },
  "dependencies": {
    "@rollup/plugin-dynamic-import-vars": "^1.4.4",
    "@rollup/plugin-inject": "^4.0.4",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/pluginutils": "^4.2.1",
    "@swc/core": "^1.3.3",
    "@swc/helpers": "^0.4.11",
    "execa": "^6.1.0",
    "find-up": "^6.3.0",
    "globby": "^13.1.2",
    "normalize-package-data": "^4.0.1",
    "semver": "^7.3.7",
    "rollup": "^2.79.1",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-tsconfig-paths": "^1.3.0"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "size-limit": "^8.1.0",
    "typescript": "^4.8.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com/"
  },
  "engines": {
    "node": ">=14"
  }
}
